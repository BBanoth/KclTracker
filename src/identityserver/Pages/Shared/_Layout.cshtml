<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="icon" type="image/x-icon" href="~/Ims-Identity/favicon.ico">

    <environment include="Development">
        <link rel="stylesheet" href="~/Ims-Identity/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/Ims-Identity/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/Ims-Identity/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/Ims-Identity/css/site.min.css" />
    </environment>
</head>
<body>
    @RenderBody()

    <environment include="Development">
        <script src="~/Ims-Identity/lib/jquery/dist/jquery.js"></script>
        <script src="~/Ims-Identity/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
        <script src="~/Ims-Identity/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/Ims-Identity/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/Ims-Identity/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/Ims-Identity/js/site.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>
